                        <ColumnDefinition Width="66*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="62*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="35*"/>

                    <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Training Date"  ></Label>
                    <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" HorizontalAlignment="Left" Content="From" ></Label>

                    <DatePicker Grid.Column="5" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" ></DatePicker>

                    <Label  Grid.Column="7" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" Content="To" VerticalAlignment="Center" ></Label>
                    <DatePicker Grid.Column="9" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" ></DatePicker>

                    <Label Grid.Column="12" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Duration" ></Label>
                    <TextBox Grid.Column="14" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center"  ></TextBox>
                    <Label Grid.Column="16" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" Content="Days" HorizontalAlignment="Left" ></Label>
                </Grid>

            </Grid>
            <Label Content="Remaining" Grid.Column="1" HorizontalAlignment="Left" Margin="250,100,0,0" Grid.Row="3" VerticalAlignment="Top" Height="49" Width="105"/>

        </Grid>
    </Grid>
</Window>

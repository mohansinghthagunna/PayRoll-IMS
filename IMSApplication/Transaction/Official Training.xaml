                <Border Grid.Column="0" Grid.ColumnSpan="11" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Grid.RowSpan="7"/>

                <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" Content="Training Name" VerticalAlignment="Center" HorizontalAlignment="Left"></Label>
                <Label Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="3" Grid.RowSpan="1" Content="Training Type" VerticalAlignment="Center" HorizontalAlignment="Left" ></Label>
                <Label Grid.Column="7" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Cost" ></Label>
                <TextBox Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" ></TextBox>
                <TextBox Grid.Column="9" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" ></TextBox>

                <ComboBox Grid.Column="3" Grid.Row="3" Grid.RowSpan="1" VerticalAlignment="Center"/>

                <Grid Grid.Column="5" Grid.ColumnSpan="5" Grid.Row="3" Grid.RowSpan="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="10*"/>

        <ComboBox Grid.Column="5" Grid.ColumnSpan="5" Grid.Row="5" VerticalAlignment="Center"  />

        <Label Grid.Column="11" Grid.ColumnSpan="1" Grid.Row="5" Grid.RowSpan="2" Content="Id" VerticalAlignment="Center"></Label>
        <TextBox Grid.Column="13" Grid.ColumnSpan="1" Grid.Row="5" Grid.RowSpan="2" VerticalAlignment="Center"></TextBox>
        <Button Grid.Column="15" Grid.ColumnSpan="1" Grid.Row="5" Grid.RowSpan="2" VerticalAlignment="Center" Content="Se"></Button>
        
        <Border Grid.Column="2" Grid.ColumnSpan="29" Grid.Row="9" Grid.RowSpan="5" BorderBrush="Black" BorderThickness="1"></Border>




        <Grid Grid.Column="3" Grid.Row="10" Grid.ColumnSpan="3" Grid.RowSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="31*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="18*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1"></Border>

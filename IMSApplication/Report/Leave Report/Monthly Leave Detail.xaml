        <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="31" Grid.RowSpan="14" BorderBrush="Black" BorderThickness="1"></Border>
        <GroupBox Header="All Employees" Grid.Column="2" Grid.Row="4" Grid.RowSpan="4" Grid.ColumnSpan="13" />
        <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="5" Grid.RowSpan="2" Content="Employee:" HorizontalAlignment="Right" VerticalAlignment="Center"  ></Label>

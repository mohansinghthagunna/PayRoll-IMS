        <TextBox Grid.Column="11" Grid.ColumnSpan="1" Grid.Row="5" Grid.RowSpan="1" VerticalAlignment="Center"></TextBox>
        <Button Grid.Column="13" Grid.ColumnSpan="1" Grid.Row="5" Grid.RowSpan="1" VerticalAlignment="Center" Content="Se"></Button>
        <Border Grid.Column="2" Grid.ColumnSpan="29" Grid.Row="9" Grid.RowSpan="5" BorderBrush="Black" BorderThickness="1"></Border>
        

        <Grid Grid.Column="18" Grid.ColumnSpan="5" Grid.Row="10" Grid.RowSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>

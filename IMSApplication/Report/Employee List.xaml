        <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="24" Grid.RowSpan="9" BorderBrush="Black" BorderThickness="1"></Border>

        <!--<Label Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Date" ></Label>
        <DatePicker Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="3" Grid.RowSpan="2" VerticalAlignment="Center"></DatePicker>
        <Label Grid.Column="9" Grid.ColumnSpan="1" Grid.Row="3" Grid.RowSpan="2" VerticalAlignment="Center" Content="(AD)" Margin="0,6,0,7" Height="26"/>
        <Label Grid.Column="11" Grid.ColumnSpan="1" Grid.Row="3" HorizontalAlignment="Right" Grid.RowSpan="2" VerticalAlignment="Center" Content="Order By"></Label>
        <ComboBox Grid.Column="13" Grid.Row="3" Grid.RowSpan="2" VerticalAlignment="Center"  />-->


        <GroupBox Header="All Department" Grid.Column="2" Grid.Row="2" Grid.RowSpan="5" Grid.ColumnSpan="12" />
        <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="4" Grid.RowSpan="2" Content="Department" VerticalAlignment="Center" HorizontalAlignment="Left"  ></Label>
        <ComboBox Grid.Column="5" Grid.ColumnSpan="8" Grid.Row="4" Grid.RowSpan="2" VerticalAlignment="Center" ></ComboBox>

        <Label Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="7" Grid.RowSpan="2" Content="Current Status" VerticalAlignment="Center" HorizontalAlignment="Left" ></Label>
        <ComboBox Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="7" Grid.RowSpan="2" VerticalAlignment="Center" ></ComboBox>

        <Label Grid.Column="9" Grid.ColumnSpan="1" Grid.Row="7" Grid.RowSpan="2" Content="Order By" VerticalAlignment="Center" HorizontalAlignment="Right"  ></Label>
        <ComboBox Grid.Column="12" Grid.ColumnSpan="1" Grid.Row="7" Grid.RowSpan="2"  VerticalAlignment="Center" ></ComboBox>

        <Button Grid.Column="17" Grid.Row="4" Grid.ColumnSpan="1" Content="Load" Grid.RowSpan="4">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Grid.Column="19" Grid.Row="4" Grid.ColumnSpan="1" Content="Print" Grid.RowSpan="4">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Grid.Column="21" Grid.Row="4" Grid.ColumnSpan="1" Content="Preview" Grid.RowSpan="4">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Grid.Column="23" Grid.Row="4" Grid.ColumnSpan="1" Content="Excel" Grid.RowSpan="4">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

        <Grid Grid.Column="1" Grid.Row="11" Grid.ColumnSpan="24" Grid.RowSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Id" MinWidth="100"/>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Employee Name" MinWidth="200" />
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Status/Report End" MinWidth="100" />
                </DataGrid.Columns>

            </DataGrid>

        </Grid>
